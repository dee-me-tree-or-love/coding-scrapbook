{
  "name": "node.ts",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "lint": "prettier --write .",
    "start": "ts-node src/index.ts",
    "test": "run-s test:ts test:js",
    "test:ts": "run-s doctest:ts power-doctest:ts doctest-ts:ts doctest-ts-improved:ts testy:ts",
    "doctest:ts": "doctest src/lib/doctest/* || echo '🧛 doctest:ts test failed'",
    "predoctest-ts:ts": "doctest-ts --jest src/lib/d_octest-ts/index.ts",
    "doctest-ts:ts": "ts-node src/lib/d_octest-ts/index.doctest.ts || echo '🧛 doctest-ts:ts test failed'",
    "predoctest-ts-improved:ts": "doctest-ts-improved src/lib/d_octest-ts-improved/",
    "doctest-ts-improved:ts": "ts-node src/lib/d_octest-ts-improved/index.doctest.ts || echo '🧛 doctest-ts-improved:ts test failed'",
    "testy:ts": "jest src/lib/testy/ || echo '🧛 testy:ts test failed'",
    "power-doctest:ts": "power-doctest src/lib/power-doctest/* || echo '🧛 power-doctest:ts test failed'",
    "pretest:js": "echo '🏗️ building the TypeScript sources before running tests...' && npm run build",
    "test:js": "echo '🤷 no JS tests provided'",
    "watch-ts": "tsc -w"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^10.0.0",
    "pino": "^6.12.0",
    "pino-pretty": "^5.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@linus/testy": "^1.1.0",
    "@types/chai": "^4.3.4",
    "@types/jest": "^29.2.4",
    "@types/node": "^16.3.1",
    "@types/pino": "^6.3.9",
    "babel-jest": "^29.3.1",
    "chai": "^4.3.7",
    "comment-to-assert": "^5.3.1",
    "concurrently": "^6.2.0",
    "doctest": "^0.19.0",
    "doctest-ts": "^0.5.0",
    "doctest-ts-improved": "^0.8.8",
    "jest": "^29.3.1",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "power-doctest": "^5.3.2",
    "prettier": "2.8.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.3.5"
  }
}